<%= render "shared/header"%>

<%= form_with model: @refrigerator, local: true do |f| %>
  <div class='field'>
    <div class="weight-bold-text">
      食材名
    </div>
    <%= f.text_area :food, class:"items-text", id:"item-name", placeholder:"一品ずつ入力20字以内", maxlength:"20" %>
    <div class="weight-bold-text">
      カテゴリー
    </div>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>    
    <div class="weight-bold-text">
      賞味期限
    </div>
    <%= f.date_field :ex_date %>
    <div class="weight-bold-text">
      備考
    </div>
    <%= f.text_area :remarks, class:"items-text", id:"item-info", placeholder:"商品の説明50字以内（色、注意点)" ,rows:"0" ,maxlength:"50" %>
    </div>
        
    <div class='actions'>
    <%= f.submit "登録", class: :form__btn %>
    </div>

  </div>
<% end %>

<%= render "shared/inside"%>
